github.provider     git.yoctoproject.org
github.setup        "" libfakekey 7ad885912efb2131e80914e964d5e635b0d07b40
version             0.3
distname            ${name}-git

license             LGPL-2.1
maintainers         openmaintainer
description         Library for simulating key press events under X11
platforms           darwin linux

categories          x11
long_description    ${description}

depends_lib-append  port:xorg-libX11 \
                    port:xorg-libXtst

patch.pre_args      -Np1

use_autoreconf      yes
pre-configure {
    if {[file exists ${worksrcpath}/configure]} {
        use_autoreconf no
    }
}

build.post_args-append -k

