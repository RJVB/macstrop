                    "CCACHE_SLOPPINESS=pch_defines,time_macros"
build.env-append    "CCACHE_SLOPPINESS=pch_defines,time_macros"

proc if_not_ccache {} {
    global configure.ccache
    if {[tbool configure.ccache]} {
        return "OFF"
    } else {
        return "ON"
    }
}

