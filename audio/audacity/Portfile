patchfiles-append   patch-parallel-vst3-build.diff

variant vst3 description {enable support for VST3 plugins} {}
if {[variant_exists vst3] && [variant_isset vst3]} {
    depends_build-append \
                    port:vst3sdk-src \
                    port:libarchive
    pre-configure {
        if {![file exists ${worksrcpath}/vst3sdk]} {
            system -W ${worksrcpath} "bsdtar -x --exclude doc -f ${prefix}/src/vst3sdk/${VST3VERSION}.tar.bz2"
        }
    }
    # The build system will build the vst3 sdk during the configure step
    configure.env-append \
                    CMAKE_BUILD_PARALLEL_LEVEL=${build.jobs} \
                    BUILD_JOBS=${build.jobs}
    configure.args-replace \
                    -D${_OPT}has_vst3=OFF \
                    -D${_OPT}use_vst3sdk=system
}

# make sure the C++ stdlib argument is added to the LDFLAGS too
