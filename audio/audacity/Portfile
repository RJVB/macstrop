# The manual subport is defined first since it doesn't require a lot of setting up
subport "${name}-manual" {}
if {${subport} eq "${name}-manual"} {
    description     The manual for audacity
    long_description {*}${description}. Users of port:audacity2-legacy may prefer to use the \
                    online manual instead of installing this port.
    github.setup    audacity audacity-manual 3.5.1 v
    homepage        https://manual.audacityteam.org/
    checksums       rmd160  a2394c21f7b5d27cc45208b226c743051278a41b \
                    sha256  a87f9bdd774ee7ce5a4a4e5e0783ffa7cb28913dcffe7310efc065471a14cf93
#                     size    22377404
    depends_run     path:${aud_app_path}:audacity
    worksrcdir      help
    use_configure   no
    build           {}
    installs_libs   no
    supported_archs noarch
    platforms       any
    destroot {
        platform darwin {
            xinstall -m 755 -d ${destroot}${aud_app_path}/Contents/help
            file copy ${worksrcpath}/manual ${destroot}${aud_app_path}/Contents/help
        }
        platform linux {
            xinstall -m 755 -d ${destroot}${prefix}/share/audacity/help
            file copy ${worksrcpath}/manual ${destroot}${prefix}/share/audacity/help
        }
    }
    return          0
}

set VST3VERSION 3.7.7

subport vst3sdk-src {}
if {${subport} eq "vst3sdk-src"} {
    description     VST 3 Plug-In SDK (sources)
    long_description \
                    VST 3 is a general rework of the long-serving VST plug-in interface. \
                    It is not compatible with the older VST versions, but it includes some \
                    new features and possibilities. We have redesigned the API to make it \
                    not only far easier and more reliable for developers to work with, but \
                    have also provided completely new possibilities for plug-ins.\n\
                    This port installs the sources, patched for use by Audacity!
    license         Steinberg-VST3
    github.tarball_from \
                    archive
    github.setup steinbergmedia vst3sdk ${VST3VERSION} v _build_19
    version     ${VST3VERSION}
    # the interesting things are all in submodules, so we need to git-fetch...
    fetch.type      git
    distname        vst3sdk

    depends_build   port:bzip2 \
                    port:libarchive \
                    port:dos2unix
    platform linux {
        depends_build-append \
                    port:coreutils
    }
    post-extract {
        system -W ${worksrcpath} "dos2unix cmake/modules/*"
    }

    # patch applied by Audacity:
    patchfiles-append \
                    vst3/disable-validator.diff
    if {[vercmp ${xcodeversion} 9.0] < 0} {
        # v3.7.7 claims to require at least Xcode 9. For lesser versions
        # we apply the patch below, which was tested on 10.9.5 (and may
        # still require 10.9). We'll assume that Xcode 9 is as sufficient
        # requirement (= that upstream actually test with that version).
        patchfiles-append \
                    vst3/patch-support-10.9-and-maybe-earlier.diff
    }
    # don't build Jack support:
    patchfiles-append \
                    vst3/patch-disable-jack.diff

    use_configure   no
    installs_libs   no
    supported_archs noarch
    platforms       any

    set dest        ${prefix}/src/vst3sdk/
    build       {
        system -W ${workpath} "bsdtar -cvj --exclude .git --exclude .gitmodules -f ${version}.tar.bz2 vst3sdk"
    }
    destroot {
        xinstall -m 755 -d ${destroot}${dest}
        xinstall -m 644 ${workpath}/${version}.tar.bz2 ${destroot}${dest}/
    }
    return          0
}

