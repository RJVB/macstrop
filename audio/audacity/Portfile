# avoid a race-like condition when quitting:
patchfiles-append   patch-scrubui-issue-9585.diff

patchfiles-append   patch-fix-@version@.diff \
                    patch-conan-@cxx_stdlib@.diff \
                    patch-viewport-racelike-condition.diff
# restore theme blending to avoid psychedelic colours
patchfiles-append   patch-restore-theme-blending.diff

# backport FFmpeg8 support
patchfiles-append   patch-ffmpeg8-support.diff

# quelch a huge number of warnings
configure.cxxflags-append \
                    -Wno-inconsistent-missing-override \
                    -Wno-overloaded-virtual

