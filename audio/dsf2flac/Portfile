PortSystem          1.0
PortGroup           github 1.1
PortGroup           boost 1.0
PortGroup           cmake 1.1
PortGroup           LTO 1.0

github.setup        dhalsimax dsf2flac 52876470a99743ba5774702566334cc105dec536
fetch.type          git
# after `git tag -a 0.4 -m "release 0.4" 3696d2d3a2d0dcf65391b7a11f1323c42600d69f`
epoch               1
version             0.4.8
distname            ${name}-git

license             GPL-3.0
maintainers         openmaintainer
description         Conversion tool for DSD files conversion with DSD256 DoP support 
platforms           darwin linux
homepage            https://invent.kde.org/libraries/pulseaudio-qt

categories          audio kde kf5
long_description    ${description}. Supports conversion from dsf or dff via DoP. \
                    DSD256 is supported by converting source dsf or dff to a DoP \
                    stream encapsulated in a 2 channels wav file 705600hz, 24 bit \
                    as flac actually does not support sample rates above 655350.

depends_lib-append  port:libogg \
                    port:flac \
                    port:id3lib \
                    port:zlib

patch.pre_args      -Np1
patchfiles-append   patch-use-our-compiler-opts.diff

cmake.install_rpath-append \
                    [boost::lib_dir]

destroot {
    xinstall -m 755 ${build.dir}/dsf2flac ${destroot}${prefix}/bin/
}

build.post_args-append -k

