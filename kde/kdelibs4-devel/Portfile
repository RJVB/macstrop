                        -DWITH_Soprano=ON \
                        -DWITH_Avahi=ON \
                        -DKDE_DEFAULT_HOME=Library/Preferences/KDE \
                        -DWITH_HSPELL=OFF \
                        -DWITH_FAM=OFF \
                        -DKDE4_AUTH_BACKEND_NAME="OSX"

