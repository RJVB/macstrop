switch $build_arch {
    i386 {
        configure.args-append   --dest-cpu=ia32
    }
    x86_64 {
        configure.args-append   --dest-cpu=x64
    }
   arm64 {
        configure.args-append   --dest-cpu=arm64
    }
}

build.cmd           ${prefix}/bin/gmake
# we need the legacy-support CPP options NOW!
configure.cppflags-prepend \
                    {*}[legacysupport::get_cpp_flags]
# # see the explanation for symlinking zlib-inc, above:
# configure.cppflags-delete \
#                     -isystem${prefix}/include
build.args-append   CC=${configure.cc} \
                    "CXX=\"${configure.cxx}\"" \
                    "CXX.host=\"${configure.cxx}\"" \
                    CPP=${configure.cpp} \
                    CPPFLAGS="${configure.cppflags}" \
                    CFLAGS="${configure.cflags} ${configure.cppflags}" \
                    CXXFLAGS="${configure.cxxflags} ${configure.cppflags}" \
                    LDFLAGS="${configure.ldflags} [legacysupport::get_library_link_flags]" \
                    PYTHON=${configure.python} \
                    V=1
build.post_args-append -wk

configure.save_build_cmd "install"

destroot {
    set bindir ${destroot}${install_prefix}/bin
    set libdir ${destroot}${install_prefix}/lib
    set libndir ${libdir}/node
    set libddir ${libdir}/dtrace
    set incdir ${destroot}${install_prefix}/include/node
    set docdir ${destroot}${install_prefix}/share/doc/${name}

    xinstall -d ${bindir}
    xinstall -d ${libdir}
    xinstall -d ${libndir}
    xinstall -d ${libddir}
    xinstall -d ${incdir}
    xinstall -d ${incdir}/uv
    xinstall -d ${docdir}

    if {${subport} eq "${name}"} {
        # install binaries
        xinstall -m 755 -W ${worksrcpath} \
            out/Release/node \
            ${bindir}

        # install headers
        xinstall -m 644 {*}[glob ${worksrcpath}/src/*.h]                ${incdir}
        xinstall -m 644 {*}[glob ${worksrcpath}/deps/v8/include/*.h]    ${incdir}
        xinstall -m 644 {*}[glob ${worksrcpath}/deps/uv/include/*.h]    ${incdir}
        xinstall -m 644 {*}[glob ${worksrcpath}/deps/uv/include/uv/*.h] ${incdir}/uv
        xinstall -m 644 {*}[glob ${worksrcpath}/deps/cares/include/*.h] ${incdir}

        # install manpage
        xinstall -m 644 -W ${worksrcpath} \
            doc/node.1 \
            ${destroot}${install_prefix}/share/man/man1

        # install docs
        xinstall -m 644 -W ${worksrcpath} \
            CHANGELOG.md \
            CONTRIBUTING.md \
            GOVERNANCE.md \
            LICENSE \
            README.md \
            SECURITY.md \
            ${docdir}
    } else {
        xinstall -d -m 755 ${destroot}${prefix}/libexec/nodejs-pkg
        if {${os.platform} eq "darwin"} {
            set upstream_name macos
        } else {
            set upstream_name ${os.platform}
        }
        xinstall -m 755 -W ${worksrcpath} \
            out/Release/node \
            ${destroot}${prefix}/libexec/nodejs-pkg/built-v${version}-${upstream_name}-${build_arch}
    }
}

livecheck.url       ${homepage}dist/
livecheck.type      regex
