name                    nodejs24

if {${os.platform} eq "darwin"} {
    if {${subport} ne "${name}-pkg"} {
        variant libstdcxx description {build against GNU's libstdc++; installs in a subprefix} {}
    }
    if {[variant_exists libstdcxx] && [variant_isset libstdcxx]} {
        if {[string match macports-clang* ${configure.compiler}]} {
            configure.cxx_stdlib \
                        macports-libstdc++
        } else {
            configure.cxx_stdlib \
                        libstdc++
        }
        set install_prefix \
                        ${prefix}/libexec/nodejs24
        configure.pre_args-replace \
                        --prefix=${prefix} \
                        --prefix=${install_prefix}
        # better once too often than too few!
        configure.ldflags-append \
                        -stdlib=${configure.cxx_stdlib}
    } else {
        configure.cxx_stdlib \
                        libc++
        set install_prefix \
                        ${prefix}
    }
} else {
    set install_prefix  ${prefix}
}
compiler.cxx_standard   2020
# Has to be gnu++20 !
configure.cxx-append    -std=gnu++20
configure.cxxflags-append \
                        -fpermissive

version                 24.11.1

categories              lang net
license                 {MIT BSD}
maintainers             {ciserlohn @ci42} openmaintainer

# Attempting to use node on Mac OS X 10.7 causes a kernel panic. libuv could
# be patched to fix this; see https://trac.macports.org/ticket/71475
platforms               {darwin != 11.*} linux

description             Evented I/O for V8 JavaScript

long_description        Node's goal is to provide an easy way to build scalable network programs in JavaScript. \
                        Node is similar in design to and influenced by systems like Ruby's Event \
                        Machine or Python's Twisted. Node takes the event model a bit further-it \
                        presents the event loop as a language construct instead of as a library.

subport "${name}-pkg" {
    description     Patched node22 binary for creating standalone executables
    long_description \
                    {*}${description}. This is ${name} with the pkg-fetch patch allowing to create \
                    standalone NodeJS executables with the `pkg` utility.\n\
                    See https://github.com/yao-pkg/pkg-fetch\n\
                    https://github.com/aclap-dev/vdhcoapp/issues/262#issuecomment-2790839946
}

