# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem                            1.0
PortGroup select                      1.0
PortGroup active_variants             1.1
PortGroup cmake                       1.1
PortGroup legacysupport               1.1
PortGroup conflicts_build             1.1
platform linux {
    set LTO_needs_ranlib              yes
}
PortGroup LTO                         1.0
platform darwin {
    PortGroup compress_workdir        1.0
}
PortGroup python-required             1.0

# Do not propagate c/c++ standards as set by base
cmake.set_c_standard                  no
cmake.set_cxx_standard                no

platform darwin {
    # link legacysupport statically for compilers
    legacysupport.use_static          yes
    # Sysconf wrapping causes issues so disable
    legacysupport.disable_function_wrap yes
}

categories              lang
platforms               {darwin >= 10} linux
license                 NCSA
maintainers             nomaintainer

set llvm_version        17
set clang_exe_version   ${llvm_version}
version                 ${llvm_version}.0.6

name                    llvm-${llvm_version} ; revision 2
subport                 clang-${llvm_version} { revision [ expr ${revision} + 4 ] }
if {${os.platform} eq "darwin"} {
    subport                 mlir-${llvm_version}  { revision 1 }
    subport                 lldb-${llvm_version}  { revision [ expr ${revision} + 1 ] }
    subport                 flang-${llvm_version} { revision 2 }
} else {
    subport                 mlir-${llvm_version}  { revision 1 ; pre-fetch {return -code error "Not yet supported"; } }
    subport                 lldb-${llvm_version}  { revision [ expr ${revision} + 1 ] ; pre-fetch {return -code error "Not yet supported"; } }
    subport                 flang-${llvm_version} { revision 2 ; pre-fetch {return -code error "Not yet supported"; } }
}
# for updated port:legacy-support
# for fixed wrapper script
subport                 lld-${llvm_version}   { revision [ expr ${revision} + 1 ] }

checksums               rmd160  10f44d5a8e3d0d5fc1a1961a8adaac945733ec07 \
                        sha256  58a8818c60e6627064f312dbf46c02d9949956558340938b71cf731ad8bc0813
#                         size    127838860

master_sites            https://github.com/llvm/llvm-project/releases/download/llvmorg-${version}
distname                llvm-project-${version}.src
use_xz                  yes

dist_subdir             llvm
set suffix              mp-${llvm_version}
set sub_prefix          ${prefix}/libexec/llvm-${llvm_version}
if {${subport} ne "lld-${llvm_version}"} {
    worksrcdir          ${worksrcdir}/llvm
} elseif {![info exists lld_standalone_build]} {
    set llvm_prefix     ${sub_prefix}
    set sub_prefix      ${prefix}/libexec/lld-${llvm_version}
}

## try this hack if clang_standalone_build doesn't work:
## it makes it possible to reuse port:llvm-${llvm_version}'s build directory
# set workpath            ${portbuildpath}/${name}/work
# ui_msg ${workpath}
# pre-extract {
