+void BGParserControllerProxy::done()
+{
+    if (m_proxied) {
+        ICore::self()->runController()->unregisterJob(this);
+        isRegistered = false;
+        m_proxied->m_bgControlledJobProxy = nullptr;
+        m_proxied = nullptr;
+        m_urls.clear();
+    }
+}
