livecheck.type      regex
livecheck.url       http://download.kde.org/stable/plasma/
livecheck.regex     (5+(\\.\\d+)+)

if {${subport} eq "${name}"} {
    PortGroup       obsolete 1.0
    replaced_by     ${name}-devel
}
