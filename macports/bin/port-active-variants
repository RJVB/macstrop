#!/bin/sh

PORT=""
OPTS=""
MULTIPLE=0
ECHOPORT=0
TRYDEVEL=0

while [ $# != 0 ] ;do
	case $1 in
		-echo)
			ECHOPORT=1
			;;
		-trydevel)
			TRYDEVEL=1
			;;
		-*)
			OPTS="${OPTS} $1"
			;;
		*)
			if [ "${PORT}" != "" ] ;then
				MULTIPLE=1
			fi
			PORT="${PORT} $1"
			;;
	esac
	shift
done

DNAME="`dirname $0`"

if [ "${PORT}" != "" ] ;then
	for p in $PORT ;do
		INSTALLED=`port installed ${p} | fgrep '(active)'`
		if [ $? != 0 -o "${INSTALLED}" = "" ] ;then
			if [ ${TRYDEVEL} = 1 ] ;then
				INSTALLED=`port installed ${p}-devel | fgrep '(active)'`
				if [ "${INSTALLED}" != "" ] ;then
					echo "\tWarning: returning active variants for port ${p}-devel!" 1>&2
				fi
			fi
		fi
		VARIANTS="`echo ${INSTALLED} | sed -e \"s|.*${p} @[^\+]*||g\" | sed -e 's|[^\+]*\(+.*\) (active)|\1|g'`"
		#VARIANTS="`echo ${INSTALLED} | sed -e \"s|.*${p} @[^\+]*||g\"`"
		if [ ${ECHOPORT} != 0 ] ;then
			gecho -n "${p} ${VARIANTS}"
			if [ "${CONFIGURE_COMPILER}" != "" ] ;then
				gecho -n " configure.compiler=\"${CONFIGURE_COMPILER}\""
			fi
			if [ "${CONFIGURE_OPTFLAGS}" != "" ] ;then
				gecho -n " configure.optflags=\"${CONFIGURE_OPTFLAGS}\""
			fi
			if [ "${CONFIGURECCACHE}" != "" ] ;then
				gecho -n " configureccache=\"${CONFIGURECCACHE}\""
			fi
			gecho ""
		elif [ ${MULTIPLE} = 0 ] ;then
			echo "${VARIANTS}"
		else
			echo "${p}: ${VARIANTS}"
		fi
	done
else
	echo "Usage: `basename $0` [-echo] [-options] <port1> [port2 [port3 [...]]]"
	echo "Prints the variants of the currently active given port(s)"
	echo "\t-echo: prepend the port name, for use with the port command, e.g. 'port patch \``basename $0` -echo foo\`'"
fi
