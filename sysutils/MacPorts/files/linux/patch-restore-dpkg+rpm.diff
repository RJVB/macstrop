+Group: ${category}
+License: ${license}
+URL: ${homepage}
+BuildRoot: ${destroot}
+AutoReq: no"
+    if {$epoch != 0} {
+	    puts $specfd "Epoch: ${epoch}"
+    }
+    if {[llength ${dependencies}] != 0} {
+	foreach require ${dependencies} {
+	    puts $specfd "Requires: [regsub -all -- "\-" $require "_"]"
